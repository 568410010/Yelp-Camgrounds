<html>
	<head>
		<title>YelpCamp</title>
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">YelpCamp1</a>
			</div>
			<div class="d-flex flex-row-reverse bd-highlight">
				<%if (!currentUser) { %>
				<div class="p-2 bd-highlight"><a class="nav-link" href="/login">Login</a></div>
			  <div class="p-2 bd-highlight"><a class="nav-link" href="/register">Sign Up</a></div>
				<%} else { %>
				<div class="p-2 bd-highlight"><a class="nav-link" href="#">Signed in as <%=currentUser.username%> </a></div>
					<div class="p-2 bd-highlight"><a class="nav-link" href="/logout">Log Out</a></div>
					
				<%} %>

			</div>	
		</div>
	</nav>
	<div class="container">
		<% if (error && error.length>0){ %>
		<div class="alert alert-danger" role="alert">
			<%= error %>
		</div>
		<% } %>
		<% if (success && success.length>0){ %>
		<div class="alert alert-success" role="alert">
			<%= success %>
		</div>
		<% } %>
	</div>
	
