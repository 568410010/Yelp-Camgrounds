<%- include("../partials/header")%>
<div class="container">
	<p style="font-size: 30px;" class="text-center">create a new campground</p>
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST" >
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description">
				</div>
				<div class="form-group text-center">
					<button class="btn btn-dark text-center" >submit!</button>
				</div>
		</form>
		<a href="/campgrounds" class="text-center">go back</a>
		</div>
	</div>
	
</div>

<%- include("../partials/footer")%>